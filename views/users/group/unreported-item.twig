{% extends 'templates/default.twig' %}

{% block title %} Group {% endblock %}

{% block current %} Group {{group.name}} > Item belum dilaporkan {% endblock %}

{% block content %}
<div class="row-fluid">
    <div class="span12">
        <div class="widget-box" style="margin-top:0px;">
            <div style="background:#ffffff" class="">
                <div style="padding-bottom:0px; padding-top:0px; background:#24272E;" class="panel-heading">
                    <div class="widget-title span8">
                    <ul style="text-align:center" class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#tab1">Tugas belum dilaporkan</a></li>
                        <li ><a  href="{{ base_url() }}/items/group/{{group.id}}/reported"
                             class="btn btn-info">Tugas dilaporkan</a></li>
                    </ul>
                    <span style="float:right; margin-top:5px;">
                        <div class="btn-group span4">
                            <a class="btn btn-info"><i class="icon-collapse"></i> Lainnya</a>
                            <a class="btn btn-info dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-sort-desc" aria-hidden="true"></i>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#"><i class="icon-fixed-width icon-pencil">
                                     Buat tugas</i></a></li>
                                <li class="divider"></li>
                                <li><a href="#"><i class="i"> Lihat semua tugas</i></a></li>
                            </ul>
                        </div>
                    </span>
                    </div>
                </div>
                <div class="panel-body" style="padding-top:0px;">
                    <div class="widget-content tab-content">
                        <div id="tab1" class="tab-pane active">

                        <div class="widget-box">
                          <br>
                              <b><i class="fa fa-list-alt" aria-hidden="true">
                                  Tugas belum dilaporkan </i></b>
                          <div class="widget-content nopadding">
                            <table class="table table-striped table-bordered">
                              <thead>
                                <tr>
                                  <th>No</th>
                                  <th>Nama</th>
                                  <th>Pengulangan</th>
                                  <th>Opsi</th>
                                </tr>
                              </thead>
                              <tbody>
                                  {% for key, item in data %}
                                  <tr>
                                      <td class="taskDesc"><i class="icon-info-sign"></i>
                                          {{ (pagination.current - 1) * pagination.perpage + (key + 1) }}</td>
                                      <td class="taskDesc"><i class="icon-info-sign"></i> {{ item.name }}</td>
                                      <td class="taskStatus"><span class="in-progress">{{ item.recurrent }}
                                      </span></td>
                                      <td class="taskOptions">
                                          <a href="" data-toggle="modal" data-target="#{{item.id}}"
                                          value="{{item.id}}"title="View Group Details"
                                          style="margin-bottom:7px">
                                          <button class="btn btn-success btn-md"
                                          style="margin-right:10px">Laporkan</button>
                                      </a>
                                  </td>
                              </tr>
                              {% endfor %}
                          </tbody>
                      </table>
                  </div>
              </div>
          </div>
      </div>
      <nav aria-label="...">
          <ul class="pager">
              <div class="pagination">
                  <ul>
                      <li class="{% if pagination.current == 1 %}disabled{% endif %}">
                          <a href="{{ base_url() }}/items/group/{{group.id}}?page={{ pagination.current - 1 }}">
                              Sebelumnya</a></li>
                              <li class="active"> <a>{{ pagination.current }}</a></li>
                              <li class="{% if pagination.current == pagination.total_page %}disabled{% endif %}">
                                  <a href="{{ base_url() }}/items/group/{{group.id}}?page={{ pagination.current + 1 }}">
                                      Selanjutnya</a></li>
                                  </ul>
                              </div>
                          </ul>
                      </nav>
                  </div>
              </div>
          </div>
      </div>
  </div>
  {% for key, item in data %}

<!-- line modal items-->
<div class="modal fade" id="squarespaceModal" tabindex="-1"
 role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            <h3 class="modal-title" id="lineModalLabel">Form Tambah tugas</h3>
        </div>
        <div class="modal-body">

        <!-- content goes here -->
        <form  action="{{ base_url() }}/items/{{group.id}}"
         method="POST" enctype="multipart/form-data">
            {% if errors %}
            <div class="alert alert-danger">
                <a class="close" data-dismiss="alert" href="#">x</a>
                Form hars diisi
            </div>
            {% endif %}
            <div class="row">
                <div class="col-xs-12 col-sm-4 col-md-5">
                    <div class="form-group {{ errors.name ? 'has-error' : '' }}">
                        <label for="name">Name :</label>
                        <input type="text" name="name" class="form-control">
                        {% if errors.name %}
                        <span class="help-block">{{ errors.name | first }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-7">
                    <div class="form-group {{ errors.description ? 'has-error' : '' }}">
                        <label for="description">Description :</label>
                        <input type="text" name="description" class="form-control">
                        {% if errors.description %}
                        <span class="help-block">{{ errors.description | first }}</span>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-5 col-md-5">
                    <div class="form-group {{ errors.public ? 'has-error' : '' }}">
                        <label for="public">Item to :</label>
                        <select class="form-control" name="public" >
                            <option value="">Select Group</option>
                            <option value="0">Public</option>
                            <option value="1">Private</option>
                        </select>
                        {% if errors.public %}
                        <span class="help-block">{{ errors.public | first }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-7">
                    <div class="form-group {{ errors.recurrent ? 'has-error' : '' }}">
                        <label for="recurrent">Recurring :</label>
                        <select class="form-control" name="recurrent" value="">
                            <option value="">No Recurring</option>
                            <option value="daily">Daily</option>
                            <option value="weekly">Weekly</option>
                            <option value="monhtly">Monthly</option>
                            <option value="yearly">Yearly</option>
                        </select>
                        {% if errors.recurrent %}
                        <span class="help-block">{{ errors.recurrent | first }}</span>
                        {% endif %}
                    </div>
                </div>
            </div>
                <div class="col-xs-12 col-sm-12 col-md-12">
                    <div class="form-group {{ errors.start_date ? 'has-error' : '' }}">
                        <label for="start_date">Start date :</label>
                        <input type="date" name="start_date" class="form-control">
                        {% if errors.start_date %}
                        <span class="help-block">{{ errors.start_date | first }}</span>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="btn-group btn-group-justified" role="group" aria-label="group button">
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-danger"
                         data-dismiss="modal" role="button">Close</button>
                    </div>
                    <div class="btn-group" role="group">
                        <button type="submit" class="btn btn-primary btn-hover-green">Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
  </div>
</div>


<div id="{{item.id}}" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h3 class="modal-title" id="lineModalLabel">Form laporan tugas</h3>
            </div>
            <div class="modal-body">

            <!-- content goes here -->
            <form  action="{{path_for('report.item', {item:item.id})}}"
            method="POST" enctype="multipart/form-data" id="laporkan">
                {% if errors %}
                <div class="alert alert-danger">
                    <a class="close" data-dismiss="alert" href="#">x</a>
                    Mohon mengisi form dengan benar
                </div>
                {% endif %}
                <div class="row" style="margin-left:45px;">
                    <div class="col-xs-12 col-sm-6 col-md-10">
                        <div class="form-group {{ errors.image ? 'has-error' : '' }}">
                            <center>Foto :</center>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-image"></i>
                                </div>
                                <input type="file" id="file" class="form-control"
                                name="image" placeholder="Item image">
                            </div>
                            {% if errors.image %}
                            <span class="help-block">{{errors.image | first}}</span>
                            {% endif %}<br />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="form-group {{ errors.description ? 'has-error' : '' }}">
                            <label for="description">Deskripsi :</label>
                            <textarea rows="5" name="description" class="form-control"
                            value="{{ item.description }}"> {{ item.description }}
                            </textarea>
                                    <!-- <input type="text" name="description" class="form-control" id="coba"> -->
                            <input type="hidden" id="data-id" name="item_id"
                             value="{{ item.id }}">

                            {% if errors.description %}
                            <span class="help-block">{{ errors.description | first }}</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <!-- <div class="row">
                    <div class="col-xs-10 col-sm-5 col-md-12">
                        <div class="form-group {{ errors.public ? 'has-error' : '' }}">
                            <label for="public">Item to :</label>
                            <select class="form-control" name="public" >
                                <option value="">Select Group</option>
                                <option value="0">Public</option>
                                <option value="1">Private</option>

                            </select>
                            {% if errors.public %}
                            <span class="help-block">{{ errors.public | first }}</span>
                            {% endif %}
                        </div>
                    </div>
                </div> -->
                <div class="modal-footer">
                    <div class="btn-group btn-group-justified" role="group" aria-label="group button">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-danger"
                             data-dismiss="modal"  role="button"><b>Close</b></button>
                        </div>
                        <div class="btn-group" role="group">
                            <button type="submit" class="btn btn-success btn-hover-green">
                                <b>Laporkan</b></button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        </div>
    </div>
</div>

<!-- line modal report -->

{% endfor %}

{% endblock %}
