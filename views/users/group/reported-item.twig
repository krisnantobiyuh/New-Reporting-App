
{% extends 'templates/default.twig' %}

{% block title %} Group {% endblock %}

{% block current %} Group {{group.name}} > Item dilaporkan{% endblock %}

{% block content %}
<div class="row-fluid">
    <div class="span12">
        <div class="widget-box" style="margin-top:0px;">
            <div style="background:#ffffff" class="">
                <div style="padding-bottom:0px; padding-top:0px; background:#24272E;" class="panel-heading">
                    <div class="widget-title span8">
                    <ul class="nav nav-tabs">
                        <li ><a href="{{path_for('unreported.item.user.group',
                         {'group': group.id, 'user':login.id})}}" class="btn btn-info" >
                            Tugas belum dilaporkan</a></li>
                        <li class="active"><a data-toggle="tab" href="#tab2">Tugas dilaporkan</a></li>
                    </ul>
                    <span style="float:right; margin-top:5px;">
                        <div class="btn-group span4">
                            <a class="btn btn-info"><i class="icon-collapse"></i> Lainnya</a>
                            <a class="btn btn-info dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-sort-desc" aria-hidden="true"></i>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#"><i class="icon-fixed-width icon-pencil">
                                     Buat tugas</i></a></li>
                                <li><a href="#"><i class="icon-fixed-width icon-pencil">
                                     Info grup</i></a></li>
                                <li><a href="{{path_for('get.group.member',
                                 {'id': group.id, 'user':login.id})}}"><i class="icon-fixed-width icon-pencil">
                                     Member grup</i></a></li>
                                <li class="divider"></li>
                                <li><a href="#"><i class="i"> Lihat semua tugas</i></a></li>
                            </ul>
                        </div>
                    </span>
                    </div>
                </div>
                <div class="panel-body" style="padding-top:0px;">
                    <div class="widget-content tab-content">
                        <div id="tab2" class="tab-pane active">
                            <div class="widget-box">
                                <h3><i class="fa fa-list-alt" aria-hidden="true">
                                    {{ group.name}} </i></h3>
                                    <div class="widget-content nopadding">
                                        <table class="table table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>No</th>
                                                    <th>Nama</th>
                                                    <th>Pengulangan</th>
                                                    <th>Opsi</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for key, item in data %}
                                                <tr>
                                                    <td class="taskDesc">
                                                        <i class="icon-info-sign"></i>
                                                        {{ (pagination.current - 1) * pagination.perpage + (key + 1) }}</td>
                                                    <td class="taskDesc">
                                                        <i class="icon-info-sign"></i>
                                                        {{ item.name }}</td>
                                                    <td class="taskStatus">
                                                        <span class="in-progress">
                                                        {{ item.recurrent }}</span></td>
                                                    <td class="taskOptions">
                                                        <a href="{{ path_for('show.item', {'id': item.id}) }}" >
                                                            <span class="label label-primary"
                                                             aria-hidden="true">Detail</span></a>
                                                        <a href="#">
                                                            <span class="label label-danger"
                                                            >Hapus</span></a>
                                                    </td>
                                                </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% if data == null %}
                        <center><h4>Tidak ada data</h4></center><hr>
                        {% else %}
                        <nav aria-label="...">
                            <ul class="pager">
                                <div class="pagination">
                                    <ul>
                                        {% if pagination.current > 1 %}
                                        <li><a href="{{ base_url() }}/home/?page={{ pagination.current - 1 }}">
                                                Sebelumnya</a></li>
                                        {% endif %}
                                        <li class="active"> <a>{{ pagination.current }}</a></li>
                                        {% if pagination.current < pagination.total_page %}
                                        <li><a href="{{ base_url() }}/home/?page={{ pagination.current + 1 }}">
                                                Selanjutnya</a></li>
                                        {% endif %}
                                    </ul>
                                </div>
                            </ul>
                        </nav>
                        {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
